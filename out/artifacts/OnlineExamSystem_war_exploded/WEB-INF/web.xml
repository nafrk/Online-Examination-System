<?xml version="1.0" encoding="UTF-8"?>
<web-app xmlns="http://xmlns.jcp.org/xml/ns/javaee"
         xmlns:xsi="http://www.w3.org/2001/XMLSchema-instance"
         xsi:schemaLocation="http://xmlns.jcp.org/xml/ns/javaee http://xmlns.jcp.org/xml/ns/javaee/web-app_3_1.xsd"
         version="3.1">

    <display-name>OnlineExamSystem</display-name>

    <servlet>
        <servlet-name>StudentServlet</servlet-name>
        <servlet-class>StudentServlet</servlet-class>
    </servlet>

    <servlet>
        <servlet-name>ComplaintServlet</servlet-name>
        <servlet-class>ComplaintServlet</servlet-class>
    </servlet>

    <servlet>
        <servlet-name>ResultsServlet</servlet-name>
        <servlet-class>ResultsServlet</servlet-class>
    </servlet>

    <servlet>
        <servlet-name>AnalyticsServlet</servlet-name>
        <servlet-class>AnalyticsServlet</servlet-class>
    </servlet>

    <servlet>
        <servlet-name>ExamsServlet</servlet-name>
        <servlet-class>ExamsServlet</servlet-class>
    </servlet>

    <servlet>
        <servlet-name>ExamQuestionsServlet</servlet-name>
        <servlet-class>ExamQuestionsServlet</servlet-class>
    </servlet>

    <servlet>
        <servlet-name>SubmitExamServlet</servlet-name>
        <servlet-class>SubmitExamServlet</servlet-class>
    </servlet>

    <servlet-mapping>
        <servlet-name>StudentServlet</servlet-name>
        <url-pattern>/student</url-pattern>
    </servlet-mapping>

    <servlet-mapping>
        <servlet-name>ComplaintServlet</servlet-name>
        <url-pattern>/complaint</url-pattern>
    </servlet-mapping>

    <servlet-mapping>
        <servlet-name>ResultsServlet</servlet-name>
        <url-pattern>/results-data</url-pattern>
    </servlet-mapping>

    <servlet-mapping>
        <servlet-name>AnalyticsServlet</servlet-name>
        <url-pattern>/analytics-data</url-pattern>
    </servlet-mapping>

    <servlet-mapping>
        <servlet-name>ExamsServlet</servlet-name>
        <url-pattern>/exams-data</url-pattern>
    </servlet-mapping>

    <servlet-mapping>
        <servlet-name>ExamQuestionsServlet</servlet-name>
        <url-pattern>/exam-questions</url-pattern>
    </servlet-mapping>

    <servlet-mapping>
        <servlet-name>SubmitExamServlet</servlet-name>
        <url-pattern>/submit-exam</url-pattern>
    </servlet-mapping>

    <welcome-file-list>
        <welcome-file>index.html</welcome-file>
    </welcome-file-list>
</web-app>
